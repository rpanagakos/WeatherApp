<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:startColor="@color/blue_de_france"
                android:centerColor="@color/blue_de_france"
                android:endColor="@color/white"
                android:angle="180" />
        </shape>
    </item>
    <item android:top="2dp"
        android:start="2dp"
        android:end="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="@color/blue_de_france"/>
        </shape>
    </item>
</layer-list>